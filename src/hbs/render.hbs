{{#each this}}
  <li class="section-movies__card" id={{id}} >
    <div class="movies-card__box" tabindex="0">
      <div class="movies-card__img-thumb">
        <img
        {{#if poster_path}}
          src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
        {{else}}
          src="https://i.ibb.co/b2HnTkB/card-1-Photo-Room.jpg"
        {{/if}}
          alt='Image of {{original_title}}'
          class='movies-card__img'
          width="270"
          height="380"
        />
      </div>

      <div class="card-info">
        {{#if title}}
          <h3 class='movies-card__title'>{{title}}</h3>
        {{else}}
          <h3 class='movies-card__title'>{{name}}</h3>
        {{/if}}

      <div class='card-info__detals'>
        {{#if genresForCard}}
        <ul class='movies-card__genres-list'>
        {{#each genresForCard}}
          <li class='movies-card__genres-item'>{{this}}</li>
        {{/each}}
        </ul>
         {{else}}
        <ul class='movies-card__genres-list'>
          <li class='movies-card__genres-item'>Undefined</li>
        </ul>
        {{/if}}

        {{#if years}}
        <span class='delimiter'>|</span>
        <p class='movies-card__date'>{{years}}</p>
        {{/if}}

        <div class="rating rating--is-hidden">{{vote_average}}</div>
        </div>
      </div>
    </div>
  </li>
{{/each}}

